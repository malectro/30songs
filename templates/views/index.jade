extends ../layouts/default

block header
  header.splash-header
    .splash-links
      a(href='/about') About
      a(href='https://www.headcount.org/') Register to Vote
      a(href='/credits') Masthead

block content
  .splash-wrapper
    .splash
      img.splash-logo(src='/images/long-logo.svg')

      .splash-social
        a.splash-social-link.box(paint-color='#efefef')
          svg.social-icon
            use.social-use-icon(xlink:href='/images/twitter-icon.svg#spotify-icon')
          span Listen to the playlist
        a.splash-social-link.box(paint-color='#efefef')
          svg.social-icon
            use.social-use-icon(xlink:href='/images/twitter-icon.svg#twitter-icon')
          span Share on Twitter
        a.splash-social-link.box(paint-color='#efefef')
          svg.social-icon.facebook
            use.social-use-icon(xlink:href='/images/twitter-icon.svg#facebook-icon')
          span Share on Facebook

      if user
        ol.splash-songs
          - for (let i = 0; i < 30; i++)
            - song = songs[i]
            if song
              a.splash-song(href=`/${song.number}`)
                li.splash-song-item
                  span.splash-song-number= song.number
                  .splash-song-info
                    span.splash-song-artist= song.artist
                    span.splash-song-title= song.title
                  .splash-song-arrow
            else
              li.splash-song
                span.splash-song-number= i + 1


block nav
  .empty

